{
  "version": "2.1",
  "services": {
    "jellyfin": {
      "image": "lscr.io/linuxserver/jellyfin:latest",
      "container_name": "TQH-jellyfin",
      "hostname": "TQH-jellyfin",
      "ports": [
        "8096:8096",
        "8920:8920",   // optional
        "7359:7359/udp",   // optional
        "1900:1900/udp"   // optional
      ],
      "environment": [
        "PUID=1000",
        "PGID=100",
        "TZ=Asia/Ho_Chi_Minh"
      ],
      "devices": [
        "/dev/dri:/dev/dri"
      ],
      "volumes": [
        "jellyfin:/config",
        "/srv:/srv"
      ],
      "network_mode": "bridge",
      "restart": "unless-stopped"
    }
  },
  "volumes": {
    "jellyfin": {}
  }
}
